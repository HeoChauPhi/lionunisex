{% block header %}
  <header id="header" class="header">
    <div class="header-wrapper">
      {#<div class="header-top">
              <div class="container">
                {% include 'block-user.twig' %}
              </div>
            </div>#}

      <div id="header-navigation" class="header-navigation">
        <div class="container">
          <div class="header-navigation-inner">
            <div class="header-logo">
              <a href="{{ site.url }}" class="logo">
                <img alt="{{ site.name }}" src="{{ site_logo }}" alt="{{ site.name }}">
              </a>
            </div>

            <div class="header-nav">
              {% block navigation %}
                <div class="block-navigation">{% include 'navigation.twig' %}</div>
              {% endblock %}

              {% block header_social %}
                {% include 'social-detail.twig' %} 
              {% endblock %}

              {% block header_cart %}
                {{ fn('shortcode', '[custom-mini-cart]') }}
              {% endblock %}
            </div>
          </div>
        </div>

        {#% if global_ppl %}
        {% include 'custom-ppl.twig' %}
        {% endif %#}
      </div>
    </div>
  </header>
{% endblock %}
